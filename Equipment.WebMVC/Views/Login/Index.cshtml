@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="renderer" content="webkit">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>黄浦区信息化基础资源管理系统</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            font-size: 12px;
            font-family: "微软雅黑",宋体;
            /*color: #fff;*/
        }

        ul, li {
            list-style: none;
        }

        img {
            border: 0;
            display: block;
        }

        a {
            text-decoration: none;
        }

        body {
            background-color: #FEF5E8;
        }
        /*登录页面*/
        .login_logo_box {
            width: 460px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 150px;
        }

            .login_logo_box h2 {
                text-align: center;
                font-size: 32px;
                color: #000;
            }

        .dialog_box {
            height: 240px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 20px;
            background: #77d5e1;
        }

            .dialog_box form {
                width: 270px;
                margin-left: auto;
                margin-right: auto;
            }

        .main {
            padding-top: 10px;
        }

        .main_01 {
            width: 270px;
            margin-top: 40px;
        }

        .main_02, .main_03 {
            margin-top: 20px;
            width: 270px;
        }

        .label {
            font-size: 14px;
            float: left;
            padding: 5px;
            display: inline;
            color: #ffffff;
        }

        .main_02 label {
            margin-left: 1em;
        }

        .main input {
            width: 200px;
            height: 30px;
            float: left;
        }

        .main_01 input, .main_02 input, .main_03 input {
            width: 200px;
            line-height: 24px;
            height: 24px;
            border: 1px solid #dedede;
        }

        .main_03 {
            overflow: hidden;
        }

            .main_03 input {
                width: 100px;
            }

        .mainli {
            float: left;
        }

        .main_03 img {
            display: block;
            float: right;
            margin-right: 10px;
            height: 24px;
        }

        .wrong {
            color: red;
            font-size: 14px;
            position: absolute;
            text-align: center;
            width: 300px;
        }

        .login_btn {
            width: 270px;
            border-top: 1px solid #dedede;
            margin-top: 20px;
            margin-bottom: 20px;
            overflow: hidden;
        }

        .btn {
            cursor: pointer;
            display: block;
            line-height: 24px;
            width: 60px;
            height: 24px;
            text-align: center;
            background: #00b0c7;
            border: 1px solid #909090;
            color: #fff;
            font-size: 14px;
            margin: 10px auto;
        }

            .btn:hover {
                background: #fff;
                border: 1px solid #00b0c7;
                color: #909090;
            }

        .login_btn .remember {
            float: right;
            margin-top: 15px;
            color: #fff;
        }
       

    </style>
</head>
<body>
    <script type="text/javascript">
        if (window.top != window.self) { top.location.href = self.location; }
    </script>
    <div class="login_logo_box">
        <h2>黄浦区信息化基础资源管理系统</h2>
    </div>
    <div class="dialog_box">
        <div class="dialog">
            <form>
                <p class="main">
                </p><div id="divMsg" class="wrong"></div>
                <div class="main_01">
                    <label class="label" style="color:#FFF">用户名：</label>
                    <input type="text" id="txtUserName" placeholder="请输入用户名" tabindex="1" class="form_name" value="" />
                </div>
                <div class="main_02">
                    <label class="label">密码：</label>
                    <input type="password" id="txtPassword" placeholder="请输入密码" tabindex="2" class="form_password" value="" />
                </div>
                <div class="login_btn">
                    <a id="btnLogin" class="btn"><strong>登录</strong></a>
                </div>
                <p></p>
            </form>
        </div>
    </div>
</body>
</html>
<script src="/Scripts/require/require/2.2.0/require.js"></script>
<script src="/Scripts/require/config/1.0.0/require.config.js"></script>
<script type="text/javascript">
    require(["jquery", "MISSY", "jquery.md5"], function () {
        var layerLoadIdx = -1;
        $(function () {
           initPage();
        });
        function initPage() {
            $("#btnLogin").click(function () { Login(); });
            $("body").keyup(function (event) {
                var e = document.all ? window.event : event;
                var keycode = (e.keyCode ? e.keyCode : e.which);
                if (keycode === 13) {
                    Login();
                }
            });
        };
        function Login() {
            var UserName = MISSY.Trim($("#txtUserName").val());
            if (MISSY.IsEmpty(UserName)) {
                $("#divMsg").html("用户名不能为空！");
                $("#txtUserName").focus();
                return false;
            }
            var Password = MISSY.Trim($("#txtPassword").val());
            if (MISSY.IsEmpty(Password)) {
                $("#divMsg").html("密码不能为空！");
                $("#txtPassword").focus();
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/Login/LoginSystemAESCryp",
                data: { UserName: UserName, Password: $.md5(Password) },
                dataType: "json",
                beforeSend: function () { layerLoadIdx = MISSY.iShowLoading("Loding..."); },
                success: function (response) {
                    if (!response) { MISSY.iErrorReturnNull(); return; }
                    if (response.ErrorType === 1) {
                        window.location.href = "/Home/Index?_r=" + Math.random();
                    }
                    else {
                        MISSY.iErrorMessage(response.MessageContent);
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    MISSY.iErrorMessage(response.MessageContent);
                },
                complete: function (xmlHttpRequest, textStatus) {
                    MISSY.iHideLoading(layerLoadIdx);
                }
            });
        };
    });
</script>